<% include partials/header %>
<div class="container text-center">
	<div class="row">
		<div class="login-style">
			<form action="/forgot" method="POST">
				<h1>Mot de passe oublié</h1>
				<legend>Entrez votre courriel et nous vous enverrons un message permettant de créer un nouveau mot de passe</legend>
				<div class="form-group">
					<label for="email">Courriel</label>
					<input type="email" name="email" autofocus class="form-control" placeholder="courriel">
				</div>
				<div class="form-group">
					<input type="submit" value="Nouveau mot de passe" class="btn btn-large btn-block btn-primary ">
				</div>
			</form>
		</div>
	</div>
</div>


