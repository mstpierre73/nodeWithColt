<% include partials/header %>

<div class="container">
	<header class="jumbotron">
		<div class="container text-center">
			<h1>Les campings favoris du Québec</h1>
			<p>Découvrez notre sélection des meilleurs endroits pour faire du camping au Québec!</p>
			<a class="btn btn-primary btn-large" href="index/formulaire">Ajouter un nouveau camping</a>
		</div>
	</header>

	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
		<% campgrounds.forEach((camp) => { %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%= camp.image %>" />	
				<div class="caption">
					<h4><%= camp.name %></h4>
				</div>
				<p><a class="btn btn-primary" href="/index/<%= camp._id  %>">Plus d'information</a></p>
			</div>

		</div>
		<% }); %>
	</div>
	
</div>
<% include partials/footer %>

