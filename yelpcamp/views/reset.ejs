<% include partials/header %>
<div class="container text-center">
	<div class="row">
	<div class="login-style">
		<form action="/reset/<%= token %>" method="POST">
			<h1>Mofifier votre mot de passe</h1>
		  <legend>Entrez votre nouveau mot de passe</legend>
		  <div class="form-group">
		    <label for="password">Nouveau mot de passe</label>
		    <input type="password" name="password" value="" placeholder="Nouveau mot de passe" autofocus="autofocus" class="form-control"/>
		  </div>
		  <div class="form-group">
		    <label for="confirm">Confirmez le nouveau mot de passe</label>
		    <input type="password" name="confirm" value="" placeholder="Confirmez le mot de passe" class="form-control"/>
		  </div>
		  <div class="form-group">
		    <button type="submit" class="btn btn-primary btn-large btn-block">Modifier</button>
		  </div>
		</form>
	</div>
</div>	
</div>

<% include partials/footer %>