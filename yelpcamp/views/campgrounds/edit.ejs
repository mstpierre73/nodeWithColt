<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 class="text-center">Modifier <%= campgrounds.name %></h1>
		<div class="login-style">
			<form action="/index/<%= campgrounds._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" value="<%= campgrounds.name %>" name="campground[name]" required/>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%= campgrounds.image %>" name="campground[image]" required/>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%= campgrounds.description %>" name="campground[description]" required/>
				</div>
				<div class="form-group">
					<input class="form-control" type="number" value="<%= campgrounds.price %>" name="campground[price]" min="0.00" step="0.01" required/>
				</div>				
				<div class="form-group">
					<button class= "btn btn-lg btn-primary btn-block">Soumettre</button> 
				</div>
			</form>
		</div>
	</div>
</div>

<% include ../partials/footer %>