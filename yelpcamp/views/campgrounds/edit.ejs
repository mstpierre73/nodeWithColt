<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 class="text-center">Modifier <%= campground.name %></h1>
		<div class="login-style">
			<form action="/index/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<label for="name">Nom du camping</label>
					<input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]" required/>
				</div>
				<div class="form-group">
					<label for="image">Url de l'image</label>
					<input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]" required/>
				</div>
				<div class="form-group">
					<label for="description">Description du camping</label>
					<input class="form-control" type="text" value="<%= campground.description %>" name="campground[description]" required/>
				</div>
				<div class="form-group">
					<label for="location">Endroit</label>
					<input id="location" class="form-control" type="text" name="location" value="<%= campground.location %>" name="campground[location]" required/>
				</div>					
				<div class="form-group">
					<label for="price">Prix</label>
					<input class="form-control" type="number" value="<%= campground.price %>" name="campground[price]" min="0.00" step="0.01" required/>
				</div>				
				<div class="form-group">
					<button class= "btn btn-lg btn-primary btn-block">Soumettre</button> 
				</div>
			</form>
		</div>
	</div>
</div>

<% include ../partials/footer %>