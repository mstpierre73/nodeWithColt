<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 class="text-center">Ajouter un nouveau camping</h1>
		<div class="login-style">
			<form action="/index" method="POST">
				<div class="form-group">
					<label for="name">Nom du camping</label>
					<input class="form-control" type="text" placeholder="Nom du camping" name="newCamp" required/>
				</div>
				<div class="form-group">
					<label for="image">Url de l'image</label>
					<input class="form-control" type="text" placeholder="Url de l'image" name="imgURL" required/>
				</div>
				<div class="form-group">
					<label for="description">Description du camping</label>
					<input class="form-control" type="text" placeholder="Description" name="description" required/>
				</div>
				<div class="form-group">
					<label for="location">Adresse du camping</label>
					<input id="location" class="form-control" type="text" placeholder="Adresse du camping" name="location" />
				</div>				
				<div class="form-group">
					<label for="price">Prix</label>
					<input class="form-control" type="number" placeholder="Prix" name="price" min="0.00" step="0.01" required/>
				</div>				
				<div class="form-group">
					<button class= "btn btn-lg btn-primary btn-block">Soumettre</button> 
				</div>
			</form>
		</div>
		
	</div>
	
</div>


<% include ../partials/footer %>