<% include partials/header %>

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h1 class="text-center">Inscrivez-vous à CampiFav!</h1>	
		</div>
		
		<div class="login-style">
			<form action="/register" method="POST">
				<div class="form-group">
					<label for="username">Entrez votre prénom</label>
					<input class="form-control" type="text" name="firstName" placeholder="Entrez votre prénom" required/>
				</div>
				<div class="form-group">
					<label for="username">Entrez votre nom de famille</label>
					<input class="form-control" type="text" name="lastName" placeholder="Entrez votre nom de famille" required/>
				</div>				
				<div class="form-group">
					<label for="username">Entrez votre nom d'usager</label>
					<input class="form-control" type="text" name="username" placeholder="Entrez votre nom d'usager" required/>
				</div>				
				<div class="form-group">
					<label for="email">Entrez votre courriel</label>
					<input class="form-control" type="email" name="email" placeholder="Entrez votre adresse courriel" required/>
				</div>
				<div class="form-group">
					<label for="username">Entrez une url pour une image d'avatar</label>
					<input class="form-control" type="text" name="avatar" placeholder="Entrez l'url de votre image d'avatar" required/>
				</div>	
				<div class="form-group">
					<label for="password">Entrez votre mot de passe</label>
					<input class="form-control" type="password" name="password" placeholder="Entrez votre mot de passe" required/>
				</div>				
				<div class="form-group">
					<label for="username">Entrez votre code d'administrateur</label>
					<input class="form-control" type="password" name="adminCode" placeholder="Code d'administrateur(optionnel)"/>
				</div>				
				<div class="form-group">
					<button class="btn btn-lg btn-success btn-block">Soumettre</button>
				</div>
			</form>
		</div>

	</div>
</div>


<% include partials/footer %>