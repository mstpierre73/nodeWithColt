<% include ../partials/header %>

<div class="container">
	<header class="jumbotron">
		<div class="container text-center">
			<h1><i class="fas fa-campground"></i>Les campings favoris du Québec</h1>
			<p>Découvrez notre sélection des meilleurs endroits pour faire du camping au Québec!</p>
			<p><a class="btn btn-success btn-large my-2" href="index/formulaire">Ajouter un nouveau camping</a></p>
		</div>
	</header>

	<div class="row text-center">
		<% campgrounds.forEach((camp) => { %>
		<div class="col-lg-3 col-md-4 col-sm-6 mb-3">
			<div class="card">
  				<img src="<%= camp.image %>" class="card-img-top" id="index-img" alt="photo du camping: <%= camp.name %>">
  				<div class="card-body">
    				<h5 class="card-title"><%= camp.name %></h5>
    				<p class="card-text"><%=camp.description.substring(0, 70)%>...</p>
    				<a href="/index/<%= camp._id  %>" class="btn btn-success">Plus d'information</a>
  			</div>
		</div>
		</div>
		<% }); %>
		</div>
</div>

<% include ../partials/footer %>

