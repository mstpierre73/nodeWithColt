<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h1 class="text-center">Modifier votre commentaire</h1>
		</div>
		
		<div class="login-style">
			<form action="/index/<%= campgrounds_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<label for="comment">Commentaire</label>
					<input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]" required/>
				</div>
				<div class="form-group">
					<button class= "btn btn-lg btn-success btn-block">Soumettre</button> 
				</div>
			</form>
		</div>
	</div>
</div>


<% include ../partials/footer %>