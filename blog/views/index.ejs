<% include ./partials/header %>

<div class="container main">
	<h1>Index page is running!</h1>

	<% blogs.forEach((blog)=>{ %>
		<div>
			<h2><%= blog.title %></h2>
			<img src="<%= blog.image %>" />
			<span><%= blog.created.toDateString() %></span>
			<p><%- blog.body.substring(0, 100) %>...</p>
			<a href="/blogs/<%= blog._id %>">Lire plus</a>
		</div>
	<% }); %>	
</div>


<% include ./partials/footer %>